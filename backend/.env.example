# =============================================================================
# Flowauxi Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_PORT=5000
FLASK_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Facebook/WhatsApp Configuration
# =============================================================================
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# =============================================================================
# Supabase Configuration
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# Firebase Configuration
# =============================================================================
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=credentials/your-firebase-adminsdk.json

# =============================================================================
# Encryption
# =============================================================================
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# =============================================================================
# Razorpay Configuration (REQUIRED for payments)
# =============================================================================

# API Keys - Get from Razorpay Dashboard > Settings > API Keys
# Use rzp_test_xxx for testing, rzp_live_xxx for production
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx

# Webhook Secret - Get from Razorpay Dashboard > Webhooks > Secret
# This is CRITICAL for webhook verification - do NOT use a placeholder!
RAZORPAY_WEBHOOK_SECRET=your_actual_webhook_secret_here

# Plan IDs - Create in Razorpay Dashboard > Subscriptions > Plans
RAZORPAY_PLAN_STARTER=plan_xxxxxxxxxxxx
RAZORPAY_PLAN_BUSINESS=plan_xxxxxxxxxxxx
RAZORPAY_PLAN_PRO=plan_xxxxxxxxxxxx

# =============================================================================
# Google Sheets Integration (Optional)
# =============================================================================
# GOOGLE_SHEETS_CREDENTIALS={"type":"service_account",...}
